<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- System Permissions -> granted automatically -->

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application>

        <!-- Services -->

        <service
            android:name="com.w2sv.navigator.FileNavigator"
            android:foregroundServiceType="specialUse">

            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="A service that registers new files entering the file system and emits respective notifications, via which the user can move those new files to a chosen location." />
        </service>

        <service
            android:name="com.w2sv.navigator.quicktile.FileNavigatorTileService"
            android:exported="true"
            android:icon="@drawable/ic_app_logo_24"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <meta-data
                android:name="android.service.quicksettings.TOGGLEABLE_TILE"
                android:value="true" />
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- Exported System Broadcast Receivers -->

        <receiver
            android:name="com.w2sv.navigator.system_broadcastreceiver.PowerSaveModeChangedReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.os.action.POWER_SAVE_MODE_CHANGED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.w2sv.navigator.system_broadcastreceiver.BootCompletedReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Non-exported Broadcast Receivers -->

        <receiver android:name="com.w2sv.navigator.moving.receiver.MoveBroadcastReceiver" />
        <receiver android:name="com.w2sv.navigator.notifications.NotificationResources$CleanupBroadcastReceiver" />
        <receiver android:name="com.w2sv.navigator.moving.receiver.BatchMoveBroadcastReceiver" />
        <receiver android:name="com.w2sv.navigator.moving.receiver.CancelBatchMoveBroadcastReceiver" />

        <!-- Activities -->

        <activity
            android:name="com.w2sv.navigator.moving.activity.destination_picking.FileDestinationPickerActivity"
            android:taskAffinity="@string/task_affinity_file_moving"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.w2sv.navigator.moving.activity.destination_picking.FileBatchDestinationPickerActivity"
            android:taskAffinity="@string/task_affinity_file_moving"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.w2sv.navigator.moving.activity.QuickMoveDestinationPermissionQueryActivity"
            android:taskAffinity="@string/task_affinity_file_moving"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.w2sv.navigator.moving.activity.QuickMoveDestinationPermissionQueryOverlayDialogActivity"
            android:excludeFromRecents="true"
            android:taskAffinity="@string/task_affinity_file_moving"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.w2sv.navigator.notifications.ViewFileIfPresentActivity"
            android:noHistory="true"
            android:taskAffinity="@string/task_affinity_file_viewing"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>